{
  "OidcConfiguration": {
    "Authority": "http://localhost:8080/realms/HeadStart",
    "ClientId": "c257f553-8ce4-4225-8447-c9b7aa81f465",
    "ClientSecret": "**********"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Exceptions",
      "Serilog.Sinks.Seq",
      "Destructurama.Attributed",
      "HeadStart.SharedKernel"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "System": "Information",
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "CorrelationId": "Warning"
      }
    },
    "Properties": {
      "CorrelationId": "None"
    },
    "Destructure": [
      {
        "Name": "UsingAttributes"
      }
    ],
    "WriteTo": [
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341",
          "apiKey": "none",
          "restrictedToMinimumLevel": "Verbose"
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} | Correlation ID: {CorrelationId}{NewLine}{Exception}"
              }
            }
          ]
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithCorrelationId",
      "WithExceptionDetails"
    ]
  },
  "AllowedHosts": "*"
}
