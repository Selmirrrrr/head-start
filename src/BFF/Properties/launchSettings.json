{
    "$schema": "https://json.schemastore.org/launchsettings.json",
    // NOTE: These settings are only used when running this project directly (dotnet run --project src/BFF)
    // When running through Aspire (dotnet run --project src/Aspire/AppHost), Aspire manages ports and URLs automatically
    "profiles": {
        "HeadStart.BFF": {
            "commandName": "Project",
            "launchBrowser": true,
            "environmentVariables": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "inspectUri": "{wsProtocol}://{url.hostname}:{url.port}/_framework/debug/ws-proxy?browser={browserInspectUri}",
            "applicationUrl": "https://localhost:5002;http://localhost:5003",
            "hotReloadEnabled": true
        }
    }
}
