@using HeadStart.Client.Services
@inherits LayoutComponentBase

<PageTitle>Claimly</PageTitle>

<MudThemeProvider Theme="@LayoutService.CurrentTheme" IsDarkMode="@LayoutService.IsDarkMode" IsDarkModeChanged="@LayoutService.SetDarkMode" />
<MudPopoverProvider />
<MudSnackbarProvider />
<MudDialogProvider FullWidth="true" MaxWidth="MaxWidth.ExtraSmall" />
@Body

@code{
    [Inject]
    public LayoutService LayoutService { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        LayoutService.MajorUpdateOccurred += LayoutServiceOnMajorUpdateOccured;
        await ApplyUserPreferences();
    }

    private async Task ApplyUserPreferences()
    {
        {
            await LayoutService.ApplyUserPreferences(false);
        }
    }

    private void LayoutServiceOnMajorUpdateOccured(object? sender, EventArgs e) => StateHasChanged();
}
