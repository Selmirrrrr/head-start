@inject NavigationManager Navigation

<AuthorizeView>
	<Authorized>
		<RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="12px" class="rz-mr-6">
			<RadzenLabel>Hello, @context.User.Identity.Name!</RadzenLabel>
			<form method="post" action="/api/account/logout">
				<AntiForgeryTokenInput />
				<RadzenButton ButtonType=@ButtonType.Submit Text="Sign out" Size="ButtonSize.Small"/>
			</form>
		</RadzenStack>
	</Authorized>
	<NotAuthorized>
		<RadzenButton Text="Login" Size="ButtonSize.Small" class="rz-mr-6" Click="@(() => Navigation.NavigateTo("/api/account/login", true))" />
	</NotAuthorized>
</AuthorizeView>
