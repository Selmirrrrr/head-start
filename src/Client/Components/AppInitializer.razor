@using HeadStart.Client.Services.Users

@if (!IsLoaded)
{
    <div class="loading-container">
        <div class="logo-wrapper">
            <MudBlazorLogo Class="loading-logo" />
            <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="loading-progress" />
        </div>
    </div>
}
else
{
    @ChildContent
}

<style>
    .loading-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        z-index: 9999;
    }

    .logo-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
    }

    .loading-logo {
        width: 200px;
        height: 200px;
        animation: pulse 2s ease-in-out infinite;
    }

    .loading-progress {
        width: 200px;
    }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
            opacity: 1;
        }
        50% {
            transform: scale(1.05);
            opacity: 0.8;
        }
    }
</style>

@code {
    [Parameter] public RenderFragment ChildContent { get; set; } = null!;
    [CascadingParameter] public UserStateContainer UserState { get; set; } = null!;

    private bool IsLoaded;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await UserState.InitializeAsync();
        }
        finally
        {
            IsLoaded = true;
            StateHasChanged();
        }
    }
}
