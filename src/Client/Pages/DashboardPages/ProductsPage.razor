@page "/products"

<BlazePage Title="Products" Breadcrumbs="@_breadCrumbs">
    <MudGrid>
        <MudItem sm="12">
            <BlazePanel Title="@($"Products ({_products?.Count() ?? 0})")"
                        PanelActionsSpacing="4">
                <PanelActionsTemplate>
                    <MudInput T="string"
                              @bind-Value="@_searchString"
                              Immediate="true"
                              Variant="Variant.Outlined"
                              Placeholder="Type to search"
                              Margin="Margin.Dense"
                              AdornmentIcon="@Icons.Material.Rounded.Search">
                    </MudInput>
                    <MudButton Color="Color.Primary"
                               DropShadow="false"
                               StartIcon="@Icons.Material.Rounded.Add"
                               Variant="Variant.Filled">
                        <MudText>
                            Add Product
                        </MudText>
                    </MudButton>
                </PanelActionsTemplate>
            </BlazePanel>
        </MudItem>
    </MudGrid>
</BlazePage>

@code {

    private readonly BreadcrumbItem[] _breadCrumbs =
    [
        new("Dashboard", "/"),
        new("Products", "/products")
    ];

    private string? _searchString;
    private readonly IEnumerable<string> _products = [];
}
